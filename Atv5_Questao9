programa {
	funcao inicio() {
		
		/*9. Faça um programa para a leitura de duas notas parciais de um aluno. O programa
          deve calcular a média alcançada por aluno e apresentar:
          A mensagem "Aprovado", se a média alcançada for maior ou igual a sete;
          A mensagem "Reprovado", se a média for menor do que sete;
          A mensagem "Aprovado com Distinção", se a média for igual a dez.*/
          
		real nota1
		real nota2
		real nota3
		
		escreva("Olá, qual foi sua primeira nota? ") 
		leia(nota1)
		limpa()
		
		escreva("Qual foi sua segunda nota? ") 
		leia(nota2)
		limpa()
		
		real media = nota1+nota2
		real media_final = media/2
		
		se(media_final < 7 e media_final > 0){
		    
		    escreva("Reprovado \n")
		    
		}senao se(media_final >= 7 e media_final < 10){
		    
		    escreva("Aprovado \n")
		    
		}senao se(media_final == 10){
		    
		    escreva("Aprovado com Distinção \n")
		
		}senao se(media_final > 10 ou media_final < 0){
		    
		    escreva("Nota inválida \n")
		    
		}
		
	}
}
